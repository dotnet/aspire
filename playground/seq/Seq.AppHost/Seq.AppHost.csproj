    <NonComponentReferenceForTests Include="Aspire.Hosting.AppHost" IsAspireProjectResource="false" />
    <NonComponentReferenceForTests Include="Aspire.Hosting.Seq" IsAspireProjectResource="false" />

    <ProjectReference Include="..\Seq.ApiService\Seq.ApiService.csproj" />
  </ItemGroup>

</Project>
