{
  "$schema": "https://json.schemastore.org/aspire-8.0.json",
  "resources": {
    "openai-openai-apikey": {
      "type": "parameter.v0",
      "value": "{openai-openai-apikey.inputs.value}",
      "inputs": {
        "value": {
          "type": "string",
          "secret": true
        }
      }
    },
    "openai": {
      "type": "value.v0",
      "connectionString": "Endpoint=https://api.openai.com/v1;Key={openai-openai-apikey.value}"
    },
    "chat": {
      "type": "value.v0",
      "connectionString": "{openai.connectionString};Model=gpt-4o-mini"
    },
    "webstory": {
      "type": "project.v0",
      "path": "../OpenAIEndToEnd.WebStory/OpenAIEndToEnd.WebStory.csproj",
      "env": {
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EXCEPTION_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EVENT_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_RETRY": "in_memory",
        "ASPNETCORE_FORWARDEDHEADERS_ENABLED": "true",
        "HTTP_PORTS": "{webstory.bindings.http.targetPort}",
        "ConnectionStrings__chat": "{chat.connectionString}",
        "CHAT_ENDPOINT": "https://api.openai.com/v1",
        "CHAT_URI": "https://api.openai.com/v1",
        "CHAT_KEY": "{openai-openai-apikey.value}",
        "CHAT_MODEL": "gpt-4o-mini"
      },
      "bindings": {
        "http": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http",
          "external": true
        },
        "https": {
          "scheme": "https",
          "protocol": "tcp",
          "transport": "http",
          "external": true
        }
      }
    }
  }
}