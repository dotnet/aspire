{
  "$schema": "https://json.schemastore.org/aspire-8.0.json",
  "resources": {
    "aiservices": {
      "type": "azure.bicep.v0",
      "connectionString": "{aiservices.outputs.connectionString}",
      "path": "aiservices.module.bicep",
      "params": {
        "principalType": "",
        "principalId": ""
      }
    },
    "chat": {
      "type": "value.v0",
      "connectionString": "{aiservices.outputs.connectionString};Deployment=Phi-4"
    },
    "webstory": {
      "type": "project.v0",
      "path": "../OpenAIEndToEnd.WebStory/OpenAIEndToEnd.WebStory.csproj",
      "env": {
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EXCEPTION_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EVENT_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_RETRY": "in_memory",
        "ASPNETCORE_FORWARDEDHEADERS_ENABLED": "true",
        "HTTP_PORTS": "{webstory.bindings.http.targetPort}",
        "ConnectionStrings__chat": "{chat.connectionString}"
      },
      "bindings": {
        "http": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http",
          "external": true
        },
        "https": {
          "scheme": "https",
          "protocol": "tcp",
          "transport": "http",
          "external": true
        }
      }
    }
  }
}