{
  "$schema": "https://json.schemastore.org/aspire-8.0.json",
  "resources": {
    "infra": {
      "type": "azure.bicep.v0",
      "path": "infra.module.bicep",
      "params": {
        "userPrincipalId": ""
      }
    },
    "kusto": {
      "type": "azure.bicep.v0",
      "connectionString": "{kusto.outputs.clusterUri}",
      "path": "kusto.module.bicep"
    },
    "testdb": {
      "type": "value.v0",
      "connectionString": "{kusto.connectionString};Initial Catalog=testdb"
    },
    "worker": {
      "type": "project.v1",
      "path": "../AzureKusto.Worker/AzureKusto.Worker.csproj",
      "deployment": {
        "type": "azure.bicep.v0",
        "path": "worker-containerapp.module.bicep",
        "params": {
          "infra_outputs_azure_container_apps_environment_default_domain": "{infra.outputs.AZURE_CONTAINER_APPS_ENVIRONMENT_DEFAULT_DOMAIN}",
          "infra_outputs_azure_container_apps_environment_id": "{infra.outputs.AZURE_CONTAINER_APPS_ENVIRONMENT_ID}",
          "infra_outputs_azure_container_registry_endpoint": "{infra.outputs.AZURE_CONTAINER_REGISTRY_ENDPOINT}",
          "infra_outputs_azure_container_registry_managed_identity_id": "{infra.outputs.AZURE_CONTAINER_REGISTRY_MANAGED_IDENTITY_ID}",
          "worker_containerimage": "{worker.containerImage}",
          "worker_identity_outputs_id": "{worker-identity.outputs.id}",
          "kusto_outputs_clusteruri": "{kusto.outputs.clusterUri}",
          "worker_identity_outputs_clientid": "{worker-identity.outputs.clientId}"
        }
      },
      "env": {
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EXCEPTION_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EVENT_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_RETRY": "in_memory",
        "ConnectionStrings__testdb": "{testdb.connectionString}"
      }
    },
    "worker-identity": {
      "type": "azure.bicep.v0",
      "path": "worker-identity.module.bicep"
    },
    "worker-roles-kusto": {
      "type": "azure.bicep.v0",
      "path": "worker-roles-kusto.module.bicep",
      "params": {
        "kusto_outputs_name": "{kusto.outputs.name}",
        "principalId": "{worker-identity.outputs.principalId}"
      }
    }
  }
}