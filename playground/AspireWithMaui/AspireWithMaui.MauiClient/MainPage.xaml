<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AspireWithMaui.MauiClient.MainPage"
             Title="Weather Forecast">

    <Grid Padding="30,20"
          RowSpacing="24"
          RowDefinitions="Auto,*">
        <VerticalStackLayout Spacing="16">
            <Image
                Source="dotnet_bot.png"
                HeightRequest="120"
                Aspect="AspectFit"
                SemanticProperties.Description="dot net bot under a aspire logo umbrella" />

            <Label
                Text="Data from the Aspire Weather API"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2"
                HorizontalOptions="Center" />

            <Button
                x:Name="LoadWeatherBtn"
                Text="Load Weather"
                SemanticProperties.Hint="Loads weather data from the API"
                Clicked="OnLoadWeatherClicked"
                HorizontalOptions="Fill" />

            <Label
                x:Name="StatusLabel"
                Text="Click 'Load Weather' to get forecast"
                HorizontalOptions="Center" />
        </VerticalStackLayout>

     <CollectionView Grid.Row="1"
               x:Name="WeatherCollectionView"
               ItemsSource="{Binding WeatherData}"
               BackgroundColor="Transparent"
               EmptyView="No forecasts available yet."
               HorizontalScrollBarVisibility="Never"
               SelectionMode="None">
         <CollectionView.ItemsLayout>
            <LinearItemsLayout Orientation="Vertical" ItemSpacing="12" />
         </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border StrokeThickness="0"
                            Padding="14"
                            BackgroundColor="{AppThemeBinding Light=#F3F6FF, Dark=#1F2633}">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="12" />
                        </Border.StrokeShape>
                        <Grid RowDefinitions="Auto,Auto,Auto"
                            ColumnDefinitions="Auto,*"
                            ColumnSpacing="12"
                            RowSpacing="8">
                            <Label Grid.Row="0" Grid.ColumnSpan="2"
                                Text="{Binding Date, StringFormat='{0:MMMM dd, yyyy}'}"
                                FontAttributes="Bold"
                                HorizontalOptions="Start" />
                            <Label Grid.Row="1" Grid.Column="0"
                                Text="{Binding TemperatureC, StringFormat='{0}°C'}"
                                FontSize="16"
                                FontAttributes="Bold" />
                            <Label Grid.Row="1" Grid.Column="1"
                                Text="{Binding TemperatureF, StringFormat='({0}°F)'}"
                                HorizontalOptions="Start"
                                FontSize="16" />
                            <Label Grid.Row="2" Grid.ColumnSpan="2"
                                Text="{Binding Summary}"
                                FontAttributes="Italic"
                                TextColor="{AppThemeBinding Light=#394867, Dark=#C5D1EB}" />
                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
