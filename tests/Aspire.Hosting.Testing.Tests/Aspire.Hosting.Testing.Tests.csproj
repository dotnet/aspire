<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>$(NetCurrent)</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <IsPackable>false</IsPackable>
    <IsTestProject>true</IsTestProject>
    <OutputType>exe</OutputType>
    <TestProjectsRootPath Condition="'$(TestProjectsRootPath)' == ''">$([MSBuild]::NormalizeDirectory($(MSBuildThisFileDirectory), '..'))</TestProjectsRootPath>
  </PropertyGroup>

  <ItemGroup>
    <ProjectCapability Include="Aspire" />
  </ItemGroup>

  <ItemGroup>
    <NonComponentReferenceForTests Include="Aspire.Hosting" />
    <NonComponentReferenceForTests Include="Aspire.Hosting.Testing" />
  </ItemGroup>

  <ItemGroup Condition="'$(TestsRunningOutsideOfRepo)' == 'true'">
    <PackageReference Include="xunit" />
    <PackageReference Include="xunit.assert" />
    <PackageReference Include="xunit.runner.visualstudio" />
    <PackageReference Include="Microsoft.NET.Test.Sdk" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="$(TestProjectsRootPath)TestingAppHost1\TestingAppHost1.AppHost\TestingAppHost1.AppHost.csproj" />
  </ItemGroup>

</Project>
