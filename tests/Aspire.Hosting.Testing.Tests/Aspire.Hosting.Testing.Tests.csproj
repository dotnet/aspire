<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>$(NetCurrent)</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <IsPackable>false</IsPackable>
    <IsTestProject>true</IsTestProject>

    <RunTestsOnHelix>true</RunTestsOnHelix>
    <TestUsingWorkloads>true</TestUsingWorkloads>
    <InstallWorkloadForTesting>true</InstallWorkloadForTesting>
    <TestArchiveTestsDir>$(TestArchiveTestsDirForHostingTestingTests)</TestArchiveTestsDir>

    <_TestsArchiveStagingDir>$(ArtifactsObjDir)$(MSBuildProjectName)-helix\</_TestsArchiveStagingDir>
    <TestsArchiveSourceDir>$(_TestsArchiveStagingDir)</TestsArchiveSourceDir>
    <SupportsRunningTestsOutsideOfRepo>true</SupportsRunningTestsOutsideOfRepo>
    <DeployRunSettingsFile>true</DeployRunSettingsFile>
  </PropertyGroup>

  <ItemGroup>
    <ProjectCapability Include="Aspire" />
  </ItemGroup>

  <ItemGroup>
    <!-- KnownConfigNames.cs is copied locally for outside-of-repo builds -->
    <Compile Include="$(SharedDir)KnownConfigNames.cs" Link="Utils\KnownConfigNames.cs" Condition="'$(TestsRunningOutsideOfRepo)' != 'true'" />
  </ItemGroup>

  <ItemGroup>
    <NonComponentReferenceForTests Include="Aspire.Hosting.AppHost" />
    <NonComponentReferenceForTests Include="Aspire.Hosting.Testing" />
  </ItemGroup>

  <ItemGroup>
    <!--<ProjectReference Include="..\Aspire.Hosting.Tests\Aspire.Hosting.Tests.csproj" />-->
    <ProjectReference Include="..\TestingAppHost1\TestingAppHost1.AppHost\TestingAppHost1.AppHost.csproj" />
    <!-- FIXME: rename HostingTestingTestsSupportProject to reflect that this is a directory -->
    <HostingTestingTestsSupportProject Condition="'$(ArchiveTests)' == 'true'" Include="..\TestingAppHost1" />
  </ItemGroup>

  <Target Name="_PrepareForArchiveTests" BeforeTargets="ZipTestArchive" Condition="'$(ArchiveTests)' == 'true'">
    <ItemGroup>
      <_SourceFile Include="$(MSBuildProjectDirectory)\**\*" DestinationRelativeDir="$(MSBuildProjectName)" />
      <_SourceFile Include="$(SharedDir)KnownConfigNames.cs" DestinationRelativeDir="$(MSBuildProjectName)" />
      <_SourceFile Include="%(HostingTestingTestsSupportProject.FullPath)\**\*" DestinationRelativeDir="%(HostingTestingTestsSupportProject.FileName)" Condition="'%(HostingTestingTestsSupportProject.Identity)' != ''" />

      <_SourceFile Include="$(RepoRoot)eng\Versions.props" DestinationRelativeDir="eng" />
      <_SourceFile Include="$(RepoRoot)tests\Shared\TestsRunningOutsideOfRepo.targets" DestinationRelativeDir="Shared" />
      <!--<_SourceFile Include="$(RepoRoot)Directory.Packages.props" DestinationRelativeDir="Directory.Packages.repo.props" />-->
    </ItemGroup>

    <RemoveDir Directories="$(_TestsArchiveStagingDir)" />
    <MakeDir Directories="$(_TestsArchiveStagingDir)" />

    <Copy SourceFiles="@(_SourceFile)" DestinationFiles="@(_SourceFile -> '$(_TestsArchiveStagingDir)%(DestinationRelativeDir)\%(RecursiveDir)%(FileName)%(Extension)')" />
    <Copy SourceFiles="$(RepoRoot)Directory.Packages.props" DestinationFiles="$(_TestsArchiveStagingDir)Directory.Packages.repo.props" />
    <Copy SourceFiles="..\Shared\nuget-for-hosting-testing.config" DestinationFiles="$(_TestsArchiveStagingDir)Directory.Packages.repo.props" />
  </Target>

</Project>
