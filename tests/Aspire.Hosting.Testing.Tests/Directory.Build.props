<Project>

  <PropertyGroup>
    <!-- This triggers the import of targets needed for workload testing -->
    <IsWorkloadTestProject Condition="'$(TestsRunningOutsideOfRepo)' == 'true'" >true</IsWorkloadTestProject>
  </PropertyGroup>

  <Import Project="$([MSBuild]::GetPathOfFileAbove('Directory.Build.props', '$(MSBuildThisFileDirectory)../'))" Condition="'$(TestsRunningOutsideOfRepo)' != 'true'" />

  <!-- NOTE: This line is only required because we are using P2P references, not NuGet. It will not exist in real apps. -->
  <Import Project="../../src/Aspire.Hosting.AppHost/build/Aspire.Hosting.AppHost.props" Condition="'$(TestsRunningOutsideOfRepo)' != 'true'" />

</Project>
