<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>$(DefaultTargetFramework)</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <IsPackable>false</IsPackable>

    <!-- Do not run tests in Helix at all -->
    <RunOnAzdoHelixWindows>false</RunOnAzdoHelixWindows>
    <RunOnAzdoHelixLinux>false</RunOnAzdoHelixLinux>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\Aspire.TestUtilities\Aspire.TestUtilities.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.DotNet.XUnitV3Extensions" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="$(TestsSharedDir)TemplatesTesting\ToolCommand.cs" Link="Shared\ToolCommand.cs" />
    <Compile Include="$(TestsSharedDir)TemplatesTesting\CommandResult.cs" Link="Shared\CommandResult.cs" />
    <Compile Include="$(TestsSharedDir)TemplatesTesting\ToolCommandException.cs" Link="Shared\ToolCommandException.cs" />
    <Compile Include="$(TestsSharedDir)Playwright\TestUtils.cs" Link="Shared\TestUtils.cs" />
    <Compile Include="$(SharedDir)PathLookupHelper.cs" Link="Shared\PathLookupHelper.cs" />
  </ItemGroup>

</Project>
