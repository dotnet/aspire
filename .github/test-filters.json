{
  "$comment": "Configuration for conditional test execution based on changed files",

  "fallbackPaths": [
    "eng/.*",
    "Directory\\.Build\\.props",
    "Directory\\.Build\\.targets",
    "Directory\\.Packages\\.props",
    "global\\.json",
    "NuGet\\.config",
    "\\.github/workflows/.*",
    "\\.github/actions/.*",
    "tests/Shared/.*"
  ],

  "categories": {
    "integrations": {
      "paths": [
        "src/Aspire\\..*",
        "tests/Aspire\\..*\\.Tests/.*"
      ],
      "exclude": [
        "src/Aspire\\.ProjectTemplates/.*",
        "src/Aspire\\.Cli/.*",
        "tests/Aspire\\.Templates\\.Tests/.*",
        "tests/Aspire\\.EndToEnd\\.Tests/.*",
        "tests/Aspire\\.Cli\\.EndToEndTests/.*"
      ],
      "description": "All integration test projects"
    },
    "templates": {
      "paths": [
        "src/Aspire\\.ProjectTemplates/.*",
        "tests/Aspire\\.Templates\\.Tests/.*"
      ],
      "description": "Template tests"
    },
    "cli_e2e": {
      "paths": [
        "src/Aspire\\.Cli/.*",
        "tests/Aspire\\.Cli\\.EndToEndTests/.*"
      ],
      "description": "CLI end-to-end tests"
    },
    "endtoend": {
      "paths": [
        "tests/Aspire\\.EndToEnd\\.Tests/.*",
        "playground/.*"
      ],
      "description": "General end-to-end tests"
    },
    "extension": {
      "paths": [
        "extension/.*"
      ],
      "description": "VS Code extension tests"
    }
  }
}
