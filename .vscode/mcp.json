{
  "servers": {
    "aspire": {
      "type": "stdio",
      "command": "aspire",
      "args": ["mcp", "start"]
    },
    "aspire-local": {
      "type": "stdio",
      "command": "dotnet",
      "args": [
        "run",
        "--project",
        "${workspaceFolder}/src/Aspire.Cli/Aspire.Cli.csproj",
        "--",
        "mcp",
        "start"
      ],
    },
    // After starting this MCP server: Debug ->
    // Attach to Aspire MCP server -> Select the "aspire" process...
    "aspire-debug": {
      "type": "stdio",
      "command": "dotnet",
      "args": [
        "run",
        "--project",
        "${workspaceFolder}/src/Aspire.Cli/Aspire.Cli.csproj",
        "--",
        "mcp",
        "start",
        "--cli-wait-for-debugger"
      ],
    },
    "hex1b": {
      "type": "stdio",
      "command": "dnx",
      "args": [
        "Hex1b.McpServer@0.47.0",
        "--yes"
      ]
    },
    "github": {
      "type": "http",
      "url": "https://api.githubcopilot.com/mcp/"
    }
  },
  "inputs": []
}
