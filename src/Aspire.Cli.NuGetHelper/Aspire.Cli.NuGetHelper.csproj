<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net10.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AssemblyName>aspire-nuget</AssemblyName>
    <RootNamespace>Aspire.Cli.NuGetHelper</RootNamespace>
    <EnablePackageValidation>false</EnablePackageValidation>
    <IsPackable>false</IsPackable>
    <!-- This is a helper tool that runs under the layout's .NET runtime, not AOT -->
    <PublishAot>false</PublishAot>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" />
    <PackageReference Include="NuGet.Commands" />
    <PackageReference Include="NuGet.Protocol" />
    <PackageReference Include="NuGet.Resolver" />
    <PackageReference Include="System.CommandLine" />
  </ItemGroup>

</Project>
