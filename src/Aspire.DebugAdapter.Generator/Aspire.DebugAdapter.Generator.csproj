<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <LangVersion>latest</LangVersion>
    <Nullable>enable</Nullable>

    <!-- Source Generator Configuration -->
    <IsRoslynComponent>true</IsRoslynComponent>
    <EnforceExtendedAnalyzerRules>true</EnforceExtendedAnalyzerRules>
  </PropertyGroup>

  <ItemGroup>
    <!-- Roslyn dependencies -->
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp" PrivateAssets="all" />

    <!-- JSON parsing for schema -->
    <PackageReference Include="System.Text.Json" PrivateAssets="all" />

    <!-- Polyfills for netstandard2.0 -->
    <PackageReference Include="PolySharp" PrivateAssets="all" />
  </ItemGroup>

  <ItemGroup>
    <!-- Embed the DAP schema -->
    <EmbeddedResource Include="dapschema.json" LogicalName="dapschema.json" />
  </ItemGroup>

  <ItemGroup>
    <!-- Pack the generator DLL into analyzers folder -->
    <None Include="$(OutputPath)\$(AssemblyName).dll" Pack="true" PackagePath="analyzers/dotnet/cs" Visible="false" />

    <!-- Include MSBuild props/targets -->
    <None Include="build\**" Pack="true" PackagePath="build" />
  </ItemGroup>

</Project>
