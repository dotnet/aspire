<!--
  This targets file is shared by the AppHost SDK pack, Dashboard pack, and DCP pack projects.
-->
<Project>

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <PackageId>$(MSBuildProjectName)</PackageId>
    <IsPackable>true</IsPackable>
    <SuppressDependenciesWhenPacking>true</SuppressDependenciesWhenPacking>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
    <GenerateDependencyFile>false</GenerateDependencyFile>
    <IncludeSymbols>false</IncludeSymbols>
    <NoWarn>$(NoWarn);NU5100;NU5128;NU5130;NU5131</NoWarn>
  </PropertyGroup>

  <Import Project="$(RepoRoot)eng/ReplaceText.targets" />

  <Target Name="_SetVersionTextReplacementValue" BeforeTargets="GatherTextReplacementValues" >
    <ItemGroup>
      <TextReplacementValue Include="VERSION" NewValue="$(PackageVersion)" />
    </ItemGroup>
  </Target>

</Project>
