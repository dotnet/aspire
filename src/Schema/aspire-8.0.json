                    "target-resource": {
                      "type": "string"
                    }
                  },
                  "additionalProperties": false
                }
              }
            },
            "additionalProperties": false
          },
          {
            "type": "object",
            "required": [ "type", "stack-name", "template-path" ],
            "properties": {
              "type": {
                "const": "aws.cloudformation.template.v0"
              },
              "stack-name": {
                "type": "string"
              },
              "template-path": {
                "type": "string"
              },
              "references": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "target-resource": {
                      "type": "string"
                    }
                  },
                  "additionalProperties": false
                }
              }
            },
            "additionalProperties": false
          },
          {
            "type": "object",
