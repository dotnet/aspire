              },
              "env": {
                "$ref": "#/definitions/env"
              },
              "bindings": {
                "$ref": "#/definitions/bindings"
              },
              "bindMounts": {
                "$ref": "#/definitions/bindMounts"
              },
              "volumes": {
                "$ref": "#/definitions/volumes"
              }
