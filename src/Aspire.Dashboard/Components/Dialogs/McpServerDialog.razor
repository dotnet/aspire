@implements IDialogContentComponent

@using Aspire.Dashboard.Components.CustomIcons
@using Aspire.Dashboard.Configuration
@using Aspire.Dashboard.Mcp
@using Aspire.Dashboard.Model.Markdown
@using Aspire.Dashboard.Resources
@using Microsoft.AspNetCore.Components
@using Microsoft.Extensions.Options
@using System.Globalization
@using System.Text.Encodings.Web
@using System.Text.Json

<div class="mcp-server-dialog-content">
    @if (McpEnabled)
    {
        <p>
            @Loc[nameof(Dialogs.McpServerDialogIntroduction)]
            For more information, see <a href="https://aka.ms/aspire/mcp-getting-started" target="_blank">@Loc[nameof(Dialogs.McpServerDialogLearnMoreLink)]</a>.
        </p>
        <FluentTabs ActiveTabId="@($"tab-{_activeView}")" OnTabChange="@OnTabChangeAsync" Size="null">
            <FluentTab LabelClass="tab-label"
                       Id="@($"tab-{McpToolView.VSCode}")"
                       Label="@Loc[nameof(Dialogs.McpServerDialogVSCodeTab)]"
                       Icon="new Aspire.Dashboard.Components.CustomIcons.AspireIcons.Size16.VSCode()">
                <div class="mcp-tool-tab">
                    <p>
                        @Loc[nameof(Dialogs.McpServerDialogQuicklyAddVSCode)]
                    </p>
                    <p>
                        <a href="@($"vscode:mcp/install?{Uri.EscapeDataString(_mcpServerInstallButtonJson)}")">
                            <svg xmlns="http://www.w3.org/2000/svg" width="225" height="20" role="img" aria-label="@Loc[nameof(Dialogs.McpServerDialogInstallButtonAriaLabelVSCode)]">
                                <title>@Loc[nameof(Dialogs.McpServerDialogInstallButtonAriaLabelVSCode)]</title>
                                <g shape-rendering="crispEdges"><rect width="74" height="20" fill="#555" /><rect x="74" width="151" height="20" fill="#0098ff" /></g>
                                <g fill="#fff" text-anchor="middle" font-family="Verdana,Geneva,DejaVu Sans,sans-serif" text-rendering="geometricPrecision" font-size="110"><image x="5" y="3" width="14" height="14" href="data:image/svg+xml;base64," /><text x="465" y="140" transform="scale(.1)" fill="#fff" textLength="470">VS Code</text><text x="1485" y="140" transform="scale(.1)" fill="#fff" textLength="1410">Install Aspire MCP Server</text></g>
                            </svg>
                            @*
                                Generated from:
                                https://img.shields.io/badge/VS_Code-Install_Aspire_MCP_Server-0098FF?style=flat-square&logo=modelcontextprotocol&logoColor=white
                            *@
                        </a>
                        &nbsp;&nbsp;
                        <a href="@($"vscode-insiders:mcp/install?{Uri.EscapeDataString(_mcpServerInstallButtonJson)}")">
                            <svg xmlns="http://www.w3.org/2000/svg" width="273" height="20" role="img" aria-label="@Loc[nameof(Dialogs.McpServerDialogInstallButtonAriaLabelVSCodeInsiders)]">
                                <title>@Loc[nameof(Dialogs.McpServerDialogInstallButtonAriaLabelVSCodeInsiders)]</title>
                                <g shape-rendering="crispEdges"><rect width="122" height="20" fill="#555" /><rect x="122" width="151" height="20" fill="#24bfa5" /></g>
                                <g fill="#fff" text-anchor="middle" font-family="Verdana,Geneva,DejaVu Sans,sans-serif" text-rendering="geometricPrecision" font-size="110"><image x="5" y="3" width="14" height="14" href="data:image/svg+xml;base64," /><text x="705" y="140" transform="scale(.1)" fill="#fff" textLength="950">VS Code Insiders</text><text x="1965" y="140" transform="scale(.1)" fill="#fff" textLength="1410">Install Aspire MCP Server</text></g>
                            </svg>
                            @*
                                Generated from:
                                https://img.shields.io/badge/VS_Code_Insiders-Install_Aspire_MCP_Server-65BBA5?style=flat-square&logo=modelcontextprotocol&logoColor=white
                            *@
                        </a>
                    </p>
                    <p>
                        @Loc[nameof(Dialogs.McpServerDialogVSCodeApiKeyInstructions)]
                    </p>
                    <p class="input-container">
                        <FluentInputLabel ForId="vscode-api-key-field" Label="@Loc[nameof(Dialogs.McpServerDialogApiKeyLabel)]" />
                        <div class="api-key-container">
                            <FluentTextField id="vscode-api-key-field" Value="@DashboardOptions.Value.Mcp.PrimaryApiKey"
                                             Style="width: 300px"
                                             ReadOnly="true" />
                            <FluentButton Id="@_vsCodeCopyButtonId"
                                          AdditionalAttributes="@FluentUIExtensions.GetClipboardCopyAdditionalAttributes(DashboardOptions.Value.Mcp.PrimaryApiKey, ControlsStringsLoc[nameof(ControlsStrings.GridValueCopyToClipboard)], ControlsStringsLoc[nameof(ControlsStrings.GridValueCopied)])">
                                <span slot="start">
                                    <FluentIcon Class="copy-icon" Style="display:inline; vertical-align: text-bottom" Icon="Icons.Regular.Size16.Copy" Slot="start" />
                                    <FluentIcon Class="checkmark-icon" Style="display:none; vertical-align: text-bottom" Icon="Icons.Regular.Size16.Checkmark" Slot="start" />
                                </span>
                                @Loc[nameof(Dialogs.McpServerDialogCopyButton)]
                            </FluentButton>
                        </div>
                    </p>
                    <p>
                        <img class="api-key-help-image" src="/img/VSCodeMcpApiKeyExample.png" alt="Screenshot of VS Code showing where to enter the Aspire MCP API key. A red box highlights the text box to enter the API key." />
                    </p>
                    @if (_isHttps)
                    {
                        <div class="block-warning">
                            <div class="block-warning-icon">
                                <FluentIcon Value="new Icons.Filled.Size16.Warning()" Color="Color.Warning" />
                            </div>

                            <div class="block-warning-message">
                                <span class="title">@Loc[nameof(Dialogs.McpServerDialogVSCodeWarningTitle)]</span>
                                @Loc[nameof(Dialogs.McpServerDialogVSCodeWarningMessage)]
                                <br />
                                <br />
                                @((MarkupString)Loc[nameof(Dialogs.McpServerDialogVSCodeWarningInstructions)].ToString())
                                <a href="https://aka.ms/aspire/mcp-vscode-limitations" target="_blank">@Loc[nameof(Dialogs.McpServerDialogVSCodeWarningMoreInfo)]</a>
                            </div>
                        </div>
                        <br />
                    }
                    <div class="property-grid-container">
                        <FluentAccordion>
                            <FluentAccordionItem>
                                <HeadingTemplate>
                                    @((MarkupString)Loc[nameof(Dialogs.McpServerDialogManuallyUpdatingAccordionHeading)].ToString())
                                </HeadingTemplate>
                                <ChildContent>
                                    <div class="mcp-more-info-container">
                                        <p>
                                            @((MarkupString)string.Format(CultureInfo.CurrentCulture, Loc[nameof(Dialogs.McpServerDialogOtherOptionsVSCode)], "https://aka.ms/aspire/mcp-add-client-vscode"))
                                        </p>
                                        <MarkdownRenderer Markdown="@GetJsonConfigurationMarkdown()" MarkdownProcessor="@_markdownProcessor" />
                                    </div>
                                </ChildContent>
                            </FluentAccordionItem>
                        </FluentAccordion>
                    </div>
                </div>
            </FluentTab>
            <FluentTab LabelClass="tab-label"
                       Id="@($"tab-{McpToolView.VisualStudio}")"
                       Label="@Loc[nameof(Dialogs.McpServerDialogVisualStudioTab)]"
                       Icon="new Aspire.Dashboard.Components.CustomIcons.AspireIcons.Size16.VisualStudio()">
                <div class="mcp-tool-tab">
                    <p>
                        @Loc[nameof(Dialogs.McpServerDialogQuicklyAddVisualStudio)]
                    </p>
                    <p>
                        <a href="@($"vsweb+mcp:/install?{Uri.EscapeDataString(_mcpServerInstallButtonJson)}")">
                            <svg xmlns="http://www.w3.org/2000/svg" width="251" height="20" role="img" aria-label="@Loc[nameof(Dialogs.McpServerDialogInstallButtonAriaLabelVisualStudio)]">
                                <title>@Loc[nameof(Dialogs.McpServerDialogInstallButtonAriaLabelVisualStudio)]</title>
                                <g shape-rendering="crispEdges"><rect width="100" height="20" fill="#555" /><rect x="100" width="151" height="20" fill="#c16fde" /></g>
                                <g fill="#fff" text-anchor="middle" font-family="Verdana,Geneva,DejaVu Sans,sans-serif" text-rendering="geometricPrecision" font-size="110"><image x="5" y="3" width="14" height="14" href="data:image/svg+xml;base64," /><text x="595" y="140" transform="scale(.1)" fill="#fff" textLength="730">Visual Studio</text><text x="1745" y="140" transform="scale(.1)" fill="#fff" textLength="1410">Install Aspire MCP Server</text></g>
                            </svg>
                            @*
                                Generated from:
                                https://img.shields.io/badge/Visual_Studio-Install_Aspire_MCP_Server-8863C5?style=flat-square&logo=modelcontextprotocol&logoColor=white
                            *@
                        </a>
                    </p>
                    <p>
                        @Loc[nameof(Dialogs.McpServerDialogVisualStudioApiKeyInstructions)]
                    </p>
                    <p class="input-container">
                        <FluentInputLabel ForId="vs-api-key-field" Label="@Loc[nameof(Dialogs.McpServerDialogApiKeyLabel)]" />
                        <div class="api-key-container">
                            <FluentTextField id="vs-api-key-field" Value="@DashboardOptions.Value.Mcp.PrimaryApiKey"
                                             Style="width: 300px"
                                             ReadOnly="true" />
                            <FluentButton Id="@_vsCopyButtonId"
                                          AdditionalAttributes="@FluentUIExtensions.GetClipboardCopyAdditionalAttributes(DashboardOptions.Value.Mcp.PrimaryApiKey, ControlsStringsLoc[nameof(ControlsStrings.GridValueCopyToClipboard)], ControlsStringsLoc[nameof(ControlsStrings.GridValueCopied)])">
                                <span slot="start">
                                    <FluentIcon Class="copy-icon" Style="display:inline; vertical-align: text-bottom" Icon="Icons.Regular.Size16.Copy" Slot="start" />
                                    <FluentIcon Class="checkmark-icon" Style="display:none; vertical-align: text-bottom" Icon="Icons.Regular.Size16.Checkmark" Slot="start" />
                                </span>
                                @Loc[nameof(Dialogs.McpServerDialogCopyButton)]
                            </FluentButton>
                        </div>
                    </p>
                    <p>
                        <img class="api-key-help-image" src="/img/VSMcpApiKeyExample.png" alt="Screenshot of VS Code showing where to enter the Aspire MCP API key. A red box highlights the text box to enter the API key." />
                    </p>
                    <div class="property-grid-container">
                        <FluentAccordion>
                            <FluentAccordionItem>
                                <HeadingTemplate>
                                    @((MarkupString)Loc[nameof(Dialogs.McpServerDialogManuallyUpdatingAccordionHeading)].ToString())
                                </HeadingTemplate>
                                <ChildContent>
                                    <div class="mcp-more-info-container">
                                        <p>
                                            @((MarkupString)string.Format(CultureInfo.CurrentCulture, Loc[nameof(Dialogs.McpServerDialogOtherOptionsVisualStudio)], "https://aka.ms/aspire/mcp-add-client-vs"))
                                        </p>
                                        <MarkdownRenderer Markdown="@GetJsonConfigurationMarkdown()" MarkdownProcessor="@_markdownProcessor" />
                                    </div>
                                </ChildContent>
                            </FluentAccordionItem>
                        </FluentAccordion>
                    </div>
                </div>
            </FluentTab>
            <FluentTab LabelClass="tab-label"
                       Id="@($"tab-{McpToolView.Other}")"
                       Label="@Loc[nameof(Dialogs.McpServerDialogOtherTab)]"
                       Icon="new Microsoft.FluentUI.AspNetCore.Components.Icons.Regular.Size16.MoreCircle()">
                <div class="mcp-tool-tab">
                    <p>
                        @Loc[nameof(Dialogs.McpServerDialogOtherDescription)]
                    </p>
                    <p>
                        @Loc[nameof(Dialogs.McpServerDialogOtherInstructions)]
                    </p>
                    <div class="property-grid-container">
                        <FluentAccordion>
                            <FluentAccordionItem Heading="@Loc[nameof(Dialogs.McpServerDialogConfigurationHeading)]" Expanded="true">
                                <div slot="end">
                                    <FluentBadge Appearance="Appearance.Neutral" Circular="true">
                                        @_mcpConfigProperties.Count()
                                    </FluentBadge>
                                </div>
                                <PropertyGrid TItem="McpConfigPropertyViewModel"
                                              Items="_mcpConfigProperties.AsQueryable()"
                                              IsNameSortable="false"
                                              IsValueSortable="false"
                                              GridTemplateColumns="1fr 1.5fr" />
                            </FluentAccordionItem>
                        </FluentAccordion>
                    </div>
                </div>
            </FluentTab>
        </FluentTabs>

    }
</div>
