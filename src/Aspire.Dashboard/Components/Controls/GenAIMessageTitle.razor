@using Aspire.Dashboard.Otlp.Model
@using Metrics = Aspire.Dashboard.Resources.Metrics

@if (_messageBadge is { } messageBadge)
{
    <span class="message-name">
        <FluentIcon Value="@messageBadge.Icon" Width="18px" Color="Color.Custom" CustomColor="@ColorGenerator.Instance.GetColorHexByKey(ResourceName)" />
        @messageBadge.Text
    </span>
}

@if (_categoryBadge is { } categoryBadge)
{
    <span class="category-badge category-@categoryBadge.Class">
        <FluentIcon Value="@categoryBadge.Icon" Width="16px" Color="Color.Custom" CustomColor="var(--icon-color)" />
        @categoryBadge.Text
    </span>
}
