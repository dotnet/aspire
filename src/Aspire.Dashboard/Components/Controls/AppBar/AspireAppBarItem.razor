@namespace Aspire.Dashboard.Components
@inherits FluentComponentBase

<div @attributes="AdditionalAttributes" class="@ClassValue" style="@Style" title="@(Tooltip ?? Text)">
    <NavLink href="@Href" class="appbar-item-navlink" Match="Match">
        <FluentStack Orientation="Orientation.Vertical"
                     HorizontalAlignment="HorizontalAlignment.Center"
                     VerticalAlignment="VerticalAlignment.Center"
                     VerticalGap="0">
            <FluentIcon Value="Icon" Color="Color.Neutral" Class="appbar-item-icon" />
            <FluentIcon Value="SecondaryIcon ?? Icon" Class="appbar-item-icon-secondary" />
            <div class="appbar-item-text">
                @if (Text is not null)
                {
                    @Text
                }
                else
                {
                    @ChildContent
                }
            </div>
        </FluentStack>
    </NavLink>
</div>
