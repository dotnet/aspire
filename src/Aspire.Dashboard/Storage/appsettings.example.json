{
  "$schema": "https://json.schemastore.org/appsettings.json",
  "Dashboard": {
    "TelemetryStorage": {
      // Storage provider type: "InMemory" (default) or "SQLite"
      "ProviderType": "SQLite",
      
      // Connection string for the storage provider
      // For SQLite: "Data Source=path/to/database.db"
      // For In-Memory SQLite: "Data Source=:memory:"
      "ConnectionString": "Data Source=aspire-telemetry.db",
      
      // Automatically create the database and schema if it doesn't exist (SQLite only)
      "AutoCreateDatabase": true
    },
    
    // Telemetry limits control memory usage regardless of storage provider
    "TelemetryLimits": {
      "MaxLogCount": 10000,
      "MaxTraceCount": 10000,
      "MaxMetricsCount": 50000,
      "MaxAttributeCount": 128,
      "MaxAttributeLength": 2147483647,
      "MaxSpanEventCount": 2147483647
    }
  }
}
