<Project>

  <PropertyGroup>
    <!-- Aspire hosting projects aren't publishable right now until https://github.com/dotnet/aspire/issues/147 is good -->
    <IsPublishable Condition="'$(IsPublishable)' == ''">false</IsPublishable>
    <IsPackable Condition="'$(IsPackable)' == ''">false</IsPackable>
    <AspireGeneratedClassesVisibility Condition="'$(AspireGeneratedClassesVisibility)' != 'internal'">public</AspireGeneratedClassesVisibility>
  </PropertyGroup>

  <ItemGroup Condition="'$(Language)' == 'C#' AND ('$(ImplicitUsings)' == 'true' or '$(ImplicitUsings)' == 'enable')">
    <Using Include="Aspire.Hosting" />
    <Using Include="Aspire.Hosting.ApplicationModel" />
  </ItemGroup>

  <ItemDefinitionGroup>
    <ProjectReference>
      <Watch>false</Watch>
    </ProjectReference>
  </ItemDefinitionGroup>

</Project>
