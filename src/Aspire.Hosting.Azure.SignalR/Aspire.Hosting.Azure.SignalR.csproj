<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>$(DefaultTargetFramework)</TargetFramework>
    <IsPackable>true</IsPackable>
    <PackageTags>aspire integration hosting azure signalr realtime cloud</PackageTags>
    <Description>Azure SignalR resource types for Aspire.</Description>
    <PackageIconFullPath>$(SharedDir)AzureSignalR_256x.png</PackageIconFullPath>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="$(RepoRoot)src\Shared\AzureRoleAssignmentUtils.cs" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Aspire.Hosting.Azure\Aspire.Hosting.Azure.csproj" />
    <PackageReference Include="Azure.Provisioning" />
    <PackageReference Include="Azure.Provisioning.SignalR" />
  </ItemGroup>

</Project>
