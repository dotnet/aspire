    <Description>Azure OpenAI resource types for .NET Aspire.</Description>
    <PackageIconFullPath>$(SharedDir)AzureOpenAI_256x.png</PackageIconFullPath>
  </PropertyGroup>

  <PropertyGroup>
    <MinCodeCoverage>95</MinCodeCoverage>
