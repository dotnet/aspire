<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <RootNamespace>Aspire.Hosting.CodeGeneration</RootNamespace>
    <!-- These are just for the CLI and are separate projects for layering purposes -->
    <IsPackable>false</IsPackable>
    <IsAotCompatible>true</IsAotCompatible>
    <NoWarn>$(NoWarn);CS1591</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <InternalsVisibleTo Include="aspire" />
    <InternalsVisibleTo Include="Aspire.Hosting.CodeGeneration.TypeScript" />
    <InternalsVisibleTo Include="Aspire.Hosting.CodeGeneration.TypeScript.Tests" />
  </ItemGroup>

  <!-- Shared ATS code from Aspire.Hosting (interfaces and scanners only, not attributes) -->
  <ItemGroup>
    <Compile Include="..\Aspire.Hosting\Ats\IAtsReflection.cs" Link="Ats\IAtsReflection.cs" />
    <Compile Include="..\Aspire.Hosting\Ats\AtsCapabilityScanner.cs" Link="Ats\AtsCapabilityScanner.cs" />
    <Compile Include="..\Aspire.Hosting\Ats\AtsCapabilityInfo.cs" Link="Ats\AtsCapabilityInfo.cs" />
    <Compile Include="..\Aspire.Hosting\Ats\AtsContext.cs" Link="Ats\AtsContext.cs" />
    <Compile Include="..\Aspire.Hosting\Ats\AtsTypeMapping.cs" Link="Ats\AtsTypeMapping.cs" />
    <Compile Include="..\Aspire.Hosting\Ats\AtsConstants.cs" Link="Ats\AtsConstants.cs" />
  </ItemGroup>

</Project>
