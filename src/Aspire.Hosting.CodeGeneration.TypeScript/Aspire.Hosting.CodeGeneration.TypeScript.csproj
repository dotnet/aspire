<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <RootNamespace>Aspire.Hosting.CodeGeneration.TypeScript</RootNamespace>
    <IsPackable>false</IsPackable>
    <IsAotCompatible>true</IsAotCompatible>
  </PropertyGroup>

  <ItemGroup>
    <EmbeddedResource Include="Resources\types.ts" LogicalName="Aspire.Hosting.CodeGeneration.TypeScript.Resources.types.ts" />
    <EmbeddedResource Include="Resources\RemoteAppHostClient.ts" LogicalName="Aspire.Hosting.CodeGeneration.TypeScript.Resources.RemoteAppHostClient.ts" />
    <EmbeddedResource Include="Resources\package.json" LogicalName="Aspire.Hosting.CodeGeneration.TypeScript.Resources.package.json" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Aspire.Hosting.CodeGeneration\Aspire.Hosting.CodeGeneration.csproj" />
  </ItemGroup>

</Project>
