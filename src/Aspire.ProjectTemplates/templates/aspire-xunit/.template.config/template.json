{
  "$schema": "https://json.schemastore.org/template",
  "author": "Microsoft",
  "classifications": [
    "Common",
    "Aspire",
    "Cloud",
    "Web",
    "Web API",
    "API",
    "Service",
    "Test",
    "xUnit"
  ],
  "name": "Aspire Test Project (xUnit)",
  "defaultName": "Tests",
  "description": "A project that contains xUnit.net integration tests of an Aspire AppHost project.",
  "shortName": "aspire-xunit",
  "sourceName": "Aspire.Tests.1",
  "preferNameDirectory": true,
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "precedence": "9000",
  "identity": "Aspire.Tests.xUnit.CSharp.!!REPLACE_WITH_LATEST_MAJOR_MINOR_VERSION!!",
  "thirdPartyNotices": "https://aka.ms/dotnet/aspire/third-party-notices",
  "groupIdentity": "Aspire.Tests.xUnit",
  "sources": [
    {
      "source": "./",
      "target": "./"
    }
  ],
  "symbols": {
    "Framework": {
      "type": "parameter",
      "description": "The target framework for the project.",
      "datatype": "choice",
      "choices": [
        {
          "choice": "net8.0",
          "description": "Target net8.0"
        },
        {
          "choice": "net9.0",
          "description": "Target net9.0"
        },
        {
          "choice": "net10.0",
          "description": "Target net10.0"
        }
      ],
      "replaces": "net8.0",
      "defaultValue": "net10.0"
    },
    "XUnitVersion": {
      "type": "parameter",
      "description": "The version of xUnit.net to use.",
      "displayName": "xUnit.net version",
      "datatype": "choice",
      "replaces": "XUnitVersion",
      "choices": [
        {
          "choice": "v2",
          "displayName": "v2",
          "description": "Chooses xUnit.net v2 with VSTest"
        },
        {
          "choice": "v3",
          "displayName": "v3",
          "description": "Chooses xUnit.net v3 with VSTest (Aspire version 9.2 and later only)"
        },
        {
          "choice": "v3mtp",
          "displayName": "v3 with Microsoft Test Platform",
          "description": "Chooses xUnit.net v3 with Microsoft Test Platform (Aspire version 9.2 and later only)"
        }
      ],
      "defaultValue": "v2"
    },
    "hostIdentifier": {
      "type": "bind",
      "binding": "HostIdentifier"
    },
    "skipRestore": {
      "type": "parameter",
      "datatype": "bool",
      "description": "If specified, skips the automatic restore of the project on create.",
      "defaultValue": "false"
    }
  },
  "primaryOutputs": [
    {
      "path": "Aspire.Tests.1.csproj"
    }
  ],
  "postActions": [
    {
      "id": "restore",
      "condition": "(!skipRestore)",
      "description": "Restore NuGet packages required by this project.",
      "manualInstructions": [
        {
          "text": "Run 'dotnet restore'"
        }
      ],
      "actionId": "210D431B-A78B-4D2F-B762-4ED3E3EA9025",
      "continueOnError": true
    }
  ]
}
