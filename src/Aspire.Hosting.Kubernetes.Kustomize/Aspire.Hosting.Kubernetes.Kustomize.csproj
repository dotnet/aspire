<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>$(DefaultTargetFramework)</TargetFramework>
    <IsPackable>true</IsPackable>
    <SuppressFinalPackageVersion>true</SuppressFinalPackageVersion>
    <PackageTags>aspire hosting kubernetes</PackageTags>
    <Description>Kubernetes Kustomize publishing for .NET Aspire.</Description>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <EnablePackageValidation>false</EnablePackageValidation>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\Aspire.Hosting.Yaml\Aspire.Hosting.Yaml.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="$(SharedDir)ContainerReferenceParser.cs" Link="Shared\ContainerReferenceParser.cs" />
    <Compile Include="$(SharedDir)PublishingExtensions.cs" Link="Shared\PublishingExtensions.cs" />
    <Compile Include="$(SharedDir)PortAllocator.cs" Link="Shared\PortAllocator.cs" />
  </ItemGroup>

</Project>
