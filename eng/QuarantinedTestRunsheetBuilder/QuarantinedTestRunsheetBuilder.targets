<Project>
  <!--

    This file is used to generate a list of tests to run on GitHub Actions.

         .\build.cmd -test /p:TestRunnerName=QuarantinedTestRunsheetBuilder /p:RunQuarantinedTests=true [/bl /p:GITHUB_ACTIONS=true]

    This file imports the shared base logic for specialized test runsheet generation
    and configures it specifically for quarantined tests.

    -->

  <!-- Import the shared base target file -->
  <Import Project="../SpecializedTestRunsheetBuilderBase.targets" />

  <!-- Configure properties specific to quarantined tests -->
  <PropertyGroup>
    <SpecializedTestType>quarantined</SpecializedTestType>
    <SpecializedTestRunAdditionalArgs>$(_QuarantinedTestRunAdditionalArgs)</SpecializedTestRunAdditionalArgs>
    <SpecializedTestProperty>/p:RunQuarantinedTests=true</SpecializedTestProperty>
    <SpecializedTestRunsheetBuilderName>QuarantinedTestRunsheetBuilder</SpecializedTestRunsheetBuilderName>
  </PropertyGroup>

</Project>
