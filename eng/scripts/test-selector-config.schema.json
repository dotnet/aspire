{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "title": "Test Selector Configuration",
  "description": "Configuration for MSBuild-based test selection in Aspire",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "description": "JSON schema reference"
    },
    "ignorePaths": {
      "type": "array",
      "description": "Glob patterns for files that should be completely ignored (no test triggers)",
      "items": {
        "type": "string"
      }
    },
    "triggerAllPaths": {
      "type": "array",
      "description": "Glob patterns for files that trigger ALL tests (critical build infrastructure)",
      "items": {
        "type": "string"
      }
    },
    "triggerAllExclude": {
      "type": "array",
      "description": "Glob patterns to exclude from triggerAllPaths",
      "items": {
        "type": "string"
      }
    },
    "nonDotNetRules": {
      "type": "array",
      "description": "Rules for non-.NET files that map to specific test categories",
      "items": {
        "type": "object",
        "properties": {
          "pattern": {
            "type": "string",
            "description": "Glob pattern for matching files"
          },
          "category": {
            "type": "string",
            "description": "Test category to trigger when the pattern matches"
          }
        },
        "required": ["pattern", "category"]
      }
    },
    "categories": {
      "type": "object",
      "description": "Test category configurations",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "description": {
            "type": "string",
            "description": "Human-readable description of the category"
          },
          "testProjects": {
            "oneOf": [
              {
                "type": "string",
                "const": "auto",
                "description": "Auto-derive test projects from MSBuild"
              },
              {
                "type": "array",
                "description": "Explicit list of test project paths",
                "items": {
                  "type": "string"
                }
              }
            ]
          }
        }
      }
    }
  }
}
